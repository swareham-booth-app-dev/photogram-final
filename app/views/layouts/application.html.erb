<!DOCTYPE html>
<html>
  <head>
    <title>PhotogramFinal</title>
    <%= csrf_meta_tags %>

    <!-- Expand the number of characters we can use in the document beyond basic ASCII ðŸŽ‰ -->
    <meta charset="utf-8">

    <!-- Make it responsive to small screens -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
  </head>

    <nav>
    <% session_user_id = session.fetch(:user_id) %>
        <ul>
          <li>
            <a href="/users">All Users</a>
          </li>
          <li>
            <a href="/photos">All public photos</a>
          </li>
          <% if not session_user_id %>
            <li>
              <a href="/user_sign_in">Sign In</a>
            </li>
            
            <li>
              <a href="/user_sign_up">Sign Up</a>
            </li>
          <% else %>
            <li>
              <a href="/edit_user_profile"><%= User.where( :id => session.fetch(:user_id)).at(0).username %></a>
            </li>
            <li>
              <a href="/user_sign_out">Sign Out</a>
            </li>
          <% end %>
      </ul>
    <% if alert.present? %>
      <div>
        <%= alert %>
      </div>
    <% end %>
    </nav>

  <body>
    <%= yield %>
  </body>
</html>
