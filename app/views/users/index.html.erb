    <h1>List of users</h1>

<table border="1">
  <tr>
    <th>
      Username
    </th>

    <th>
      Private?
    </th>

    <th></th>
    <th></th>
  <% @all_users.each do |user| %>
  </tr>
    <tr>
      <td>
        <%= user.username %>
      </td>
      <td>
          <% if user.private %>
          Yes
          <% else %>
          No
          <% end %>
      </td>
      <% if @show_follow %>
        <% relevant_follow_request_id = nil %>
        <% if @current_user %>
          <% relevant_follow_request_id = @current_user.get_follow_request(user.id) %>
        <% end %>
        <% if relevant_follow_request_id %>
          <a href="/delete_follow_request/<%= relevant_follow_request_id %>">Unfollow</a>
        <% else %>
        <td>
              <form action="/insert_follow_request" method="post">
                <input type="hidden" name="query_recipient_id" value="<%= user.id %>">

                <button>
                  Follow
                </button>
              </form>
        </td>
        <% end %>

      <% end %>

      <td>
        <a href="/users/<%= user.username %>">Show details</a>
      </td>
    </tr>
    <% end %>
</table>
